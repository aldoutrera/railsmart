.depot_form
  - if flash[:alert]
    %p#notice= flash[:alert]

  = form_tag do
    %fieldset
      %legend
        = t('.login_legend')

      %div
        = label_tag :name, t('.name_html')
        = text_field_tag :name, params[:name]

      %div
        = label_tag :password, t('.password_html')
        = text_field_tag :password, params[:name]

      %div
        = submit_tag "Login"
